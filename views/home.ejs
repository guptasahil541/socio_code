<h1><%= title %></h1>

<section id="feed-posts">
    <% if(locals.user){ %> 
        <form action="/posts/create" id="new-posts-form" method="POST">
            <textarea name="content" cols="30" rows="10"></textarea>
            <button type="submit">Add Post</button>
        </form>
    <% } %> 
    
    <% for(let i of post) { %>
        <p><%= i.content %></p>
        <p><%= i.user.name %> </p>
    <% } %> 
</section>